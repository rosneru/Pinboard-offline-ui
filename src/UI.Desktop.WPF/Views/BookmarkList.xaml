<UserControl x:Class="UI.Desktop.WPF.Views.BookmarkList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:UI.Desktop.WPF.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
  <ListView 
              ItemsSource="{Binding Bookmarks}"
              SelectedItem="{Binding SelectedBookmark}">
    <ListView.ItemContainerStyle>
      <Style TargetType="{x:Type ListViewItem}">
        <Setter Property="BorderBrush" Value="LightGray" />
        <Setter Property="BorderThickness" Value="1, 0, 0, 1" />
      </Style>
    </ListView.ItemContainerStyle>
    <ListView.ItemTemplate>
      <DataTemplate>
        <Grid>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
          </Grid.RowDefinitions>
          <TextBlock Grid.Row="0" Text="{Binding Time}"/>
          <TextBlock Grid.Row="1" Text="{Binding Description}" FontWeight="Bold"/>
          <TextBlock Grid.Row="2" Text="{Binding Tags}"/>
        </Grid>
      </DataTemplate>
    </ListView.ItemTemplate>
    </ListView>
</UserControl>
