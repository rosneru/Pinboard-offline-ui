<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ucc="clr-namespace:UI.CustomControls;assembly=UI.CustomControls">

    <!-- TextBox Template for editable portion -->
    <ControlTemplate x:Key="FilteringComboBoxTextBox" TargetType="{x:Type TextBox}">
        <Border x:Name="Border"
                Background="{TemplateBinding Background}"
                BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="{TemplateBinding BorderThickness}"
                CornerRadius="8">
            <ScrollViewer x:Name="PART_ContentHost" 
                          Focusable="False" />
        </Border>
    </ControlTemplate>
    
    <!-- Main ControlTemplate with Virtualization Support -->
    <ControlTemplate x:Key="FilteringComboBoxTemplate" TargetType="{x:Type ucc:FilteringCombobox}">
        <Grid>
            <ContentPresenter x:Name="ContentSite"
                              IsHitTestVisible="False"
                              Content="{TemplateBinding SelectionBoxItem}"
                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                              Margin="8,4,32,4"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Left"
                              TextBlock.Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
            <TextBox x:Name="PART_EditableTextBox"
                     Template="{StaticResource FilteringComboBoxTextBox}"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Center"
                     Margin="8,4,32,4"
                     Focusable="True"
                     Background="{DynamicResource ControlFillColorDefaultBrush}"
                     Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                     CaretBrush="{DynamicResource TextFillColorPrimaryBrush}"
                     Visibility="Visible"
                     IsReadOnly="{TemplateBinding IsReadOnly}" />
            <Popup x:Name="Popup"
                   Placement="Bottom"
                   IsOpen="{TemplateBinding IsDropDownOpen}"
                   AllowsTransparency="True"
                   Focusable="False"
                   PopupAnimation="Slide">
                <Grid x:Name="DropDown"
                      SnapsToDevicePixels="True"
                      MinWidth="{TemplateBinding ActualWidth}"
                      MaxHeight="{TemplateBinding MaxDropDownHeight}">
                    <Border x:Name="DropDownBorder"
                            Background="{DynamicResource ControlFillColorDefaultBrush}"
                            BorderBrush="{DynamicResource SurfaceStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="2">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="4" 
                                              BlurRadius="16" 
                                              Opacity="0.8" 
                                              Direction="270" />
                        </Border.Effect>
                        <!-- CRITICAL: CanContentScroll="True" enables virtualization -->
                        <ScrollViewer SnapsToDevicePixels="True"
                                      CanContentScroll="True"
                                      HorizontalScrollBarVisibility="Auto"
                                      VerticalScrollBarVisibility="Auto">
                            <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained" />
                        </ScrollViewer>
                    </Border>
                </Grid>
            </Popup>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="IsEditable" Value="True">
                <Setter TargetName="PART_EditableTextBox" Property="Visibility" Value="Visible" />
                <Setter TargetName="ContentSite" Property="Visibility" Value="Hidden" />
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter TargetName="ContentSite" Property="TextBlock.Foreground" 
                        Value="{DynamicResource TextFillColorDisabledBrush}" />
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <!-- Main Style for FilteringCombobox -->
    <Style TargetType="{x:Type ucc:FilteringCombobox}">
        <Setter Property="MinWidth" Value="80" />
        <Setter Property="MinHeight" Value="32" />
        <Setter Property="Margin" Value="3,0,3,3" />
        <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}" />
        <Setter Property="Background" Value="Yellow" />
        <Setter Property="BorderBrush" Value="Cyan" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="MaxDropDownHeight" Value="400" />

        <!-- Virtualization settings -->
        <Setter Property="ScrollViewer.CanContentScroll" Value="True" />
        <Setter Property="VirtualizingPanel.IsVirtualizing" Value="True" />
        <Setter Property="VirtualizingPanel.VirtualizationMode" Value="Recycling" />
        <Setter Property="VirtualizingPanel.CacheLength" Value="1,2" />
        <Setter Property="VirtualizingPanel.CacheLengthUnit" Value="Page" />

        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel IsVirtualizing="True" 
                                            VirtualizationMode="Recycling" />
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>

        <!--<Setter Property="ItemContainerStyle" Value="{StaticResource FilteringComboBoxItemStyle}" />-->
        <Setter Property="Template" Value="{StaticResource FilteringComboBoxTemplate}" />
    </Style>
</ResourceDictionary>
