<Window x:Class="UI.Desktop.WPF.Dialogs.FilterByTagsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Input="clr-namespace:CommunityToolkit.Mvvm.Input"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:dvm="clr-namespace:Logic.UI.DialogViewModels;assembly=Logic.UI"
        xmlns:local="clr-namespace:UI.Desktop.WPF.Dialogs"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:md="https://github.com/fantasticfiasco/mvvm-dialogs"
        xmlns:ucc="clr-namespace:UI.CustomControls;assembly=UI.CustomControls"
        Title="Filter by tags"
        Width="800"
        Height="450"
        d:DataContext="{d:DesignInstance Type=dvm:SettingsDialogViewModel}"
        md:DialogServiceViews.IsRegistered="True"
        Loaded="Window_Loaded"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        mc:Ignorable="d">
    <Window.InputBindings>
        <KeyBinding Key="Esc"
                    Command="{Binding CloseCommand}" />
    </Window.InputBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical">
            <Label Content="Select tag to add" />
            <ucc:FilteringCombobox Name="cbxTagToAdd"
                                   Grid.Row="1"
                                   DisplayMemberPath="Name"
                                   Focusable="True"
                                   IsTabStop="True"
                                   ItemsSource="{Binding BookmarkService.DisplayedTags}"
                                   SelectedValuePath="Name"
                                   SelectionEffectivelyChanged="cbxTagToAdd_SelectionEffectivelyChanged">
                <ComboBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel />
                    </ItemsPanelTemplate>
                </ComboBox.ItemsPanel>
            </ucc:FilteringCombobox>
            <ItemsControl ItemsSource="{Binding BookmarkService.DisplayedTags}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Width="70"
                                    Margin="2"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Bottom"
                                    MouseDown="StackPanel_MouseDown"
                                    Orientation="Vertical">
                            <TextBlock Margin="0 0 0 2"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Bottom"
                                       FontSize="10"
                                       Foreground="SteelBlue"
                                       Text="{Binding OccurrenceCount}" />
                            <Rectangle Width="30"
                                       Height="{Binding Height}"
                                       Fill="SteelBlue" />
                            <TextBlock Margin="0 2 0 0"
                                       HorizontalAlignment="Center"
                                       Text="{Binding Name}" />
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Separator />
            <ListView Background="Transparent"
                      BorderThickness="0"
                      ItemsSource="{Binding BookmarkService.FilteredTags}"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                      SelectionChanged="TagsListView_SelectionChanged">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0"
                                Background="DarkGray"
                                BorderBrush="DarkGray"
                                BorderThickness="1"
                                CornerRadius="5">
                            <TextBlock Padding="0"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="White"
                                       Text="{Binding}" />
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
        <StackPanel Grid.Row="1"
                    Margin="0 6 3 0"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">

            <Button Input:RelayCommandExtensions.IsCommandUpdateEnabled="True"
                    Command="{Binding CloseCommand}"
                    Content="Close" />
        </StackPanel>

    </Grid>
</Window>
